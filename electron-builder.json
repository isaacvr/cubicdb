{
  "productName": "CubicDB",
  "appId": "com.isaacvr.cubicdb",
  "compression": "maximum",
  "electronDownload": {
    "cache": "cache",
    "isVerifyChecksum": false
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "asar": true,
  "directories": {
    "buildResources": "static/assets",
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!src/",
    "!cache/",
    "!out/",
    "!LICENSE.md",
    "!package-lock.json",
    "!pnpm-lock.yaml",
    "!yarn.lock",
    "!postcss.config.cjs",
    "!svelte.config.cjs",
    "!tailwind.config.cjs",
    "!Todo.md",
    "!tsconfig.json",
    "!tsconfig.node.json",
    "!vite.config.ts",
    "package.json",
    "build/**/*",
    "src/electron/**/*"
  ],
  "extraResources": [
    "src/lib/fixed/algs.db",
    "src/lib/fixed/tutorials.db",
    "src/lib/fixed/algversion.json",
    "src/lib/fixed/tutversion.json",
    "src/lib/fixed/reconstructions.db",
    "src/lib/fixed/recversion.json",
    "src/lib/fixed/cert.pem",
    "src/lib/fixed/csr.pem",
    "src/lib/fixed/key.pem"
  ]
}
